# Production Environment Variables for Render Deployment
# Copy these values to Render's Environment Variables section
# Updated: November 11, 2025 - Using SendGrid HTTP API

# Flask Configuration
FLASK_ENV=production
FLASK_APP=wsgi.py
SECRET_KEY=ptsa-render-secret-key-2024-johannesburg-za

# Database Configuration (Render will provide this automatically when you link the database)
# DATABASE_URL=postgresql://user:password@host/database

# Application Settings
PYTHONPATH=/app
WTF_CSRF_ENABLED=True
WTF_CSRF_TIME_LIMIT=None

# Server Configuration (Render sets this automatically)
PORT=10000

# Email Configuration - SendGrid HTTP API (REPLACES SMTP)
# Set this in Render Environment Variables (DO NOT commit actual key to GitHub)
SENDGRID_API_KEY=your_sendgrid_api_key_here
MAIL_DEFAULT_SENDER=info@ptsa.co.za

# Security Settings
SESSION_COOKIE_SECURE=True
SESSION_COOKIE_HTTPONLY=True
SESSION_COOKIE_SAMESITE=Lax

# Application Metadata
APP_NAME=PTSA Tracker
APP_VERSION=2.0
DEPLOYMENT_REGION=singapore
DEPLOYMENT_PLATFORM=render
