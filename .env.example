# Flask Configuration
FLASK_APP=wsgi.py
FLASK_ENV=production
SECRET_KEY=replace_with_a_long_random_value

# Database Configuration
DATABASE_URL=sqlite:///app.db
SQLALCHEMY_DATABASE_URI=sqlite:///app.db

# Application Settings
PYTHONPATH=/app
WTF_CSRF_ENABLED=True
WTF_CSRF_TIME_LIMIT=None

# Server Configuration
PORT=10000

# File Upload Settings
UPLOAD_FOLDER=/app/app/uploads
MAX_CONTENT_LENGTH=26214400

# Email Configuration (Optional)
MAIL_SERVER=smtp.gmail.com
MAIL_PORT=587
MAIL_USE_TLS=True
MAIL_USERNAME=youraddress@example.com
MAIL_PASSWORD=your_app_password
MAIL_DEFAULT_SENDER=PTSA Tracker <youraddress@example.com>

# Security Settings
SESSION_COOKIE_SECURE=True
SESSION_COOKIE_HTTPONLY=True
SESSION_COOKIE_SAMESITE=Lax

# Deployment Settings
APP_NAME=PTSA Tracker
DEPLOYMENT_REGION=singapore
DEPLOYMENT_PLATFORM=render

# AI Features (REQUIRED for image parsing - PDF/PowerPoint work without it)
# Get your API key from https://platform.openai.com/api-keys
# Cost: ~$0.01-0.02 per image/document
OPENAI_API_KEY=sk-your-openai-api-key-here
